<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="footballbetting">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo01"
        android:label="Football 365 Betting Tips"
        android:roundIcon="@drawable/logo01"
        android:supportsRtl="true"
        android:theme="@style/Theme.BottomNavigationView">
        <activity
            android:name="com.application.footballbetting.History"
            android:exported="false" />
        <activity
            android:name="com.application.footballbetting.PlayTips"
            android:exported="false" />
        <activity
            android:name="com.application.footballbetting.BetGuide"
            android:exported="false" />
        <activity
            android:name="com.application.footballbetting.GuidePage"
            android:exported="false" />
        <activity
            android:name="com.application.footballbetting.HomeAct"
            android:exported="false" />
        <activity
            android:name="com.application.footballbetting.MainActivity"
            android:exported="true" />
        <activity
            android:name="com.application.footballbetting.SplashAct"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>