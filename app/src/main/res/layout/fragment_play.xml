<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.application.footballbetting.PlayFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/img2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="5dp"
        android:adjustViewBounds="true"
        android:src="@drawable/bannen2"
        android:background="@drawable/customborder3"
        android:scaleType="fitXY"
        android:clickable="false"
        android:outlineProvider="background"
        app:shapeAppearanceOverlay="@style/roundimageview" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#63FB03"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Football Betting Tips"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/t1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#63FB03"
            android:text="Underdogs vs. Favorites"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/sb01"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/t1"
            android:background="@drawable/sb7"
            android:layout_marginHorizontal="20dp" />

        <Button
            android:id="@+id/t2"
            android:layout_below="@id/sb01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#63FB03"
            android:layout_marginBottom="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Spreads"
            android:layout_marginHorizontal="20dp"/>

        <ImageView
            android:id="@+id/sb02"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/sb8"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@id/t2"/>

        <Button
            android:id="@+id/t3"
            android:layout_below="@id/sb02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#63FB03"
            android:layout_marginBottom="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Moneylines"
            android:layout_marginHorizontal="20dp"/>

        <ImageView
            android:id="@+id/sb03"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/sb9"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@id/t3"/>

        <Button
            android:id="@+id/t4"
            android:layout_below="@id/sb03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#63FB03"
            android:layout_marginBottom="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Over/Under Betting (Totals)"
            android:layout_marginHorizontal="20dp"/>

        <ImageView
            android:id="@+id/sb04"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/sb10"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@id/t4"/>

        <Button
            android:id="@+id/t5"
            android:layout_below="@id/sb04"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#63FB03"
            android:layout_marginBottom="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="How Much Should You Bet?"
            android:layout_marginHorizontal="20dp"/>

        <ImageView
            android:id="@+id/sb05"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/sb11"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@id/t5"
            android:layout_marginBottom="15dp"/>

    </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>